
@{
    ViewBag.Title = "Hospital Manage";
    Layout = "~/Areas/nadmin/Views/Shared/_Layout.cshtml";
}

@model Prp.Sln.HospitalModelAdmin
@section RenderCss{

}
@section RenderScript{

    <script>
        var typeId = 0;
        $(document).ready(function () {


        });
    </script>
}
<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Hospital Manage </h2>
            <div class="panel_toolbox">
                <a href="/admin/hospital-setup" class="btn btn-info"> Add New</a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">ID </th>
                            <th class="column-title">Name </th>
                            <th class="column-title">Code </th>
                            <th class="column-title">Abbr </th>
                            <th class="column-title">Name Display </th>
                            <th class="column-title">Level</th>
                            <th class="column-title">Type</th>
                            <th class="column-title">IsActive </th>

                            <th>
                                <span class="nobr">Action</span>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && (Model.list != null && Model.list.Count > 0))
                        {
                            foreach (var item in Model.list)
                            {
                                <tr>
                                    <td>@item.hospitalId</td>
                                    <td>@item.name</td>
                                    <td>@item.code</td>
                                    <td>@item.abbr</td>
                                    <td>@item.nameDisplay</td>
                                    <td>@item.levelName</td>
                                    <td>@item.typeName</td>
                                    @if (item.isActive)
                                    {
                                        <td>Active</td>
                                    }
                                    else
                                    {
                                        <td>In-Active</td>
                                    }

                                    <td>
                                        <a title="Edit Content" class="ank" href="@("/admin/hospital-setup?id="+ item.hospitalId)"><i class="fa fa-pencil-square-o"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>


