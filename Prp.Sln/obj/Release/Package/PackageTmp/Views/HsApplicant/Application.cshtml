                <td><input type="text" id="txtspj#value#" class="txt-spj fld" reffId="#value#" value="#preferenceNo#" /></td>
                <td>
                    <input type="file" class="form-control fld flup" name="fl#value#" id="fl#value#" reffId="#hsSpId#" />
                    <input type="hidden" id="hfd#value#" value="#nocImage#" />
                    <img id="img#value#" class="flup-img fld" src="/images/Hardship/#applicantId#/#nocImage#" alt="" style="display:none;" />
