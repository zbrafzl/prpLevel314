                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div id="divFlup">
                                    </div>
                                </div>
                                <div class="row mt-15">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <div class="panel-title pull-left">
                                                Preference where can apply
                                            </div>
                                            <div class="panel-title pull-right spn-invalid" style="display:none;"> Where can't apply</div>
                                            <div class="clearfix"></div>
                                        </div>
