                <h3 class="heading">Hardship Application</h3>
                <hr class="colorgraph">

                <fieldset>
                    <legend>
                        <label class="checkbox-inline" for="chkConfirm">
                            Applicant Info
                        </label>
                    </legend>
                    <div class="row col-md-12 " id="divApplicantInfo">
                    </div>
                </fieldset>

                <fieldset>
                    <legend>
                        <label class="checkbox-inline" for="chkConfirm">
                            Joining Info
                        </label>
                    </legend>
                    <div class="row col-md-12 " id="divJoiningInfo">
                    </div>
                </fieldset>

