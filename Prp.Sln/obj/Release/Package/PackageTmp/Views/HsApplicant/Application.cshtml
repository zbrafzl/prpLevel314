            display: none;
        }

        .panel-heading h3 {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: normal;
            width: 75%;
            padding-top: 8px;
        }
    </style>

}
@section RenderScript{

    <script>
        var applicantId = 0, hsAppId = 0, specialityJobId = 0;
        $(document).ready(function () {

            applicantId = ConvertToInt($("#hfdApplicantId").val());

            GetAndBindJoiningAndHsInfo();

            $(document).on('click', '.spn-invalid', function () {
                $('#modlPreferenceNotValid').modal('show');
            });

            $(document).on('change', '.chk-spj', function () {
                ApplyPreferenceValidation();
            });
        });



        var objIndcJoin = {}, objJoin = {}, objSpec = {}, listSpec = [], objApp = {}, objAppInfo = {}, objDegree = {}
            , listFU = [], listType = [];
        function GetAndBindJoiningAndHsInfo() {

            var obj = {};
            obj.spName = "spApplicantDataGetHardship";

            var listParam = [];

            var objParam = {};
            objParam.key = "applicantId";
            objParam.value = applicantId;
            objParam.dataType = "int";
            listParam.push(objParam);

            obj.listParam = listParam;
            var resp = CallActionPost("/Common/CallSpGenericToDataSet", obj);
            if (resp != null) {

                var objHs = resp.Table[0];

                $("#hfdHsId").val(objHs.hsId);

                objApp = resp.Table1[0];
                objAppInfo = resp.Table3[0];
                objDegree = resp.Table5[0];
                BindApplicantInfo();

                objJoin = resp.Table11[0];
                objSpec = resp.Table12[0];
                objIndcJoin = resp.Table13[0];
                BindJoiningInfo(objJoin, objSpec);

                listType = resp.Table6;
                DDLBindList("#ddlType", listType, "Select One", -9, 1);

                listFU = resp.Table16;
                listSpec = resp.Table20;
                BindPreference(listSpec);

                var objHsApp = resp.Table15[0];
                if (objHsApp.hsAppId > 0) {
                    hsAppId = objHsApp.hsAppId;
                    $("#ddlType").val(objHsApp.typeId);
                    $("#ddlType").change();
                    $("#txtDetail").val(objHsApp.detail);
                    DisableForm();
                }
                else {
                    hsAppId = 0;
                    $("#ddlType").val(1);
                    $("#ddlType").change();
                    EditFormOpen();
                }
            }
        }

        function BindApplicantInfo() {
            var htmlTemp = $("#spnJoinInfoRow").html();

            var hmtlInfo = "";
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Applicant Id : ").replace(/{#value#}/g, ConvertToString(objApp.applicantId));
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Name : ").replace(/{#value#}/g, objApp.name);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "PMDC No. : ").replace(/{#value#}/g, objApp.pmdcNo);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Contact No. : ").replace(/{#value#}/g, objApp.contactNumber);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "S/D/W Of : ").replace(/{#value#}/g, objAppInfo.fatherName);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "CNIC/Passport : ").replace(/{#value#}/g, objAppInfo.cnicNo);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Degree : ").replace(/{#value#}/g, objDegree.instituteName);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "District : ").replace(/{#value#}/g, objAppInfo.districtName);
            $("#divApplicantInfo").html(hmtlInfo);
        }

        function BindJoiningInfo(objJoin, obj) {

            var htmlTemp = $("#spnJoinInfoRow").html();

            //
            var hmtlJoinigInfo = "";
            hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Induction : ").replace(/{#value#}/g, objIndcJoin.name);

            specialityJobId = obj.specialityJobId;

            if (specialityJobId == 0) {
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Program : ").replace(/{#value#}/g, obj.Program);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Hospital : ").replace(/{#value#}/g, obj.Institute);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Speciality : ").replace(/{#value#}/g, obj.Specialty);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Marks : ").replace(/{#value#}/g, obj.Aggregate);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Joining Date : ").replace(/{#value#}/g, obj.joiningStatus);
            }
            else {
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Program : ").replace(/{#value#}/g, obj.typeName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Quota : ").replace(/{#value#}/g, obj.quotaName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Institute : ").replace(/{#value#}/g, obj.instituteName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Hospital : ").replace(/{#value#}/g, obj.hospitalName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Speciality : ").replace(/{#value#}/g, obj.specialityName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Marks : ").replace(/{#value#}/g, objJoin.marks);
            }
            $("#divJoiningInfo").html(hmtlJoinigInfo);

        }

        var listFlu = [];
        function DDLEventChangeType() {
            try {
                listFlu = [];
                var typeId = ConvertToInt($("#ddlType").val());
                listFlu = $.grep(listFU, function (n, i) {
                    return n.typeId == typeId
                });
                GenerateFileUploader(listFlu);
            } catch (e) {
            }
        }

        function GenerateFileUploader(listFlu) {
            $('#divFlup').html("");
            var htmlAll = "";
            try {
                if (listFlu != null && listFlu.length > 0) {
                    var objItem = {};
                    var htmlSingle = $('#flupRow').html();
                    var flClsReq = "";
                    htmlSingle = htmlSingle.replace(/{#applicantId#}/g, applicantId);
                    for (var i = 0; i < listFlu.length; i++) {
                        objItem = listFlu[i];
                        flClsReq = "";
                        if (objItem.isMandatory == 1)
                            flClsReq = "required";
                        htmlAll = htmlAll + htmlSingle.replace(/{#id#}/g, objItem.fileId).replace(/{#code#}/g, objItem.code)
                            .replace(/{#fileName#}/g, objItem.fileName)
                            .replace(/{#title#}/g, objItem.title).replace(/{#isMandatory#}/g, objItem.isMandatory)
                            .replace(/{#hsDocId#}/g, objItem.hsDocId).replace(/{#flClsReq#}/g, flClsReq);
                    }

                    $('#divFlup').html(htmlAll);

                    try {
                        var listOld = $.grep(listFlu, function (n, i) {
                            return n.hsDocId > 0
                        });

                        if (listOld != null && listOld.length > 0) {
                            for (var i = 0; i < listOld.length; i++) {
                                var objItem = listOld[i];
                                var id = objItem.fileId;
                                $('#img' + id).show();
                                $('#rmv' + id).show();
                            }
                        }
                    } catch (e) {
                    }

                    ApplyDocsValidation();
                }
            } catch (e) {
                $('#divFlup').html("");
            }
        }

        function ApplyDocsValidation() {
            $(".fl-docs").removeClass("required");
            if (listFlu != null && listFlu.length > 0) {

                for (var i = 0; i < listFlu.length; i++) {
                    var objItem = listFlu[i];
                    var id = objItem.fileId;
                    var fileName = ConvertToString($('#hfd' + id).val());

                    if (objItem.isMandatory == 1 && fileName.length== 0) {
                        $("#fl" + id).addClass("required");
                    }
                }
            }
        }

        function BindPreference(listSpecJob) {
            $("#divSpecilityJob").html("");
            $("#divPreferenceNotValid").html("");

            var htmlAll = "";
            if (listSpecJob.length > 0) {

                var listValid = $.grep(listSpecJob, function (n, i) {
                    return n.statusId == 1;
                });

                if (listValid.length > 0) {
                    var htmlTemp = $("#specilityJobRow").html();
                    htmlTemp = htmlTemp.replace(/#applicantId#/g, applicantId);
                    for (var i = 0; i < listValid.length; i++) {
                        var objItem = listValid[i];
                        htmlAll = htmlAll + htmlTemp.replace(/#key#/g, objItem.key).replace(/#value#/g, objItem.value)
                            .replace(/#preferenceNo#/g, objItem.preferenceNo).replace(/#nocImage#/g, objItem.nocImage);
                    }
                    $("#divSpecilityJob").html(htmlAll);

                    for (var i = 0; i < listValid.length; i++) {
                        var objItem = listValid[i];
                        if (objItem.jobId > 0)
                            $("#chkspj" + objItem.value).prop("checked", true);
                    }

                    for (var i = 0; i < listValid.length; i++) {
                        var objItem = listValid[i];
                        if (objItem.nocImage.length > 0) {
                            $('#img' + objItem.value).show();
                            $('#rmv' + objItem.value).show();
                        }
                    }

                    ApplyPreferenceValidation();
                }
                else {
                    htmlAll = $("#specilityJobRowNoRecord").html();
                    $("#divSpecilityJob").html(htmlAll);
                }

                var listInValid = $.grep(listSpecJob, function (n, i) {
                    return n.statusId > 1;
                });

                var htmlAllNotValid = "";

                if (listInValid.length > 0) {
                    $(".spn-invalid").show();
                    var htmlTemp = $("#specilityJobRowMd").html();
                    for (var i = 0; i < listInValid.length; i++) {
                        var objItem = listInValid[i];
                        htmlAllNotValid = htmlAllNotValid + htmlTemp.replace(/#key#/g, objItem.key)
                            .replace(/#value#/g, objItem.value).replace(/#status#/g, objItem.status)
                            .replace(/#district#/g, objItem.district);
                    }
                }
                else {
                    $(".spn-invalid").hide();
                    htmlAllNotValid = $("#specilityJobRowNoRecord").html();
                }
                $("#divPreferenceNotValid").html(htmlAllNotValid);


            }
            else {
                htmlAll = $("#specilityJobRowNoRecord").html();
                $("#divSpecilityJob").html(htmlAll);
                if (specialityJobId > 0) {
                    $("#pnlButton").remove();
                }
            }
        }

        function ApplyPreferenceValidation() {
            $(".txt-spj").removeClass("required");
            $('.chk-spj:checked').each(function () {
                var reffId = $(this).attr("reffId");
                if (this.checked) {
                    $("#txtspj" + reffId).addClass("required");
                }
            });
        }

        function EditFormOpen() {
            $(".fld").prop("disabled", false);
            $("#btnSave").show();
            $("#btnEdit").hide();

        }

        function DisableForm() {
            $(".fld").prop("disabled", true);
            $("#btnSave").hide();
            $("#btnEdit").show();
        }

        function SaveDataApplicationHs() {

            var obj = ValidateFromDataHs();
            if (obj.isOk == true) {
                var objresp = CallActionPost("/HsApplicant/HsApplicationAddUpdate", obj);
                var resp = objresp.Table[0];
                if (resp != null && resp.status == true) {
                    SaveDataApplicationDocsHs(resp.id);
                }
                else {
                    alert("Some thing went worng!");
                }
            }
        }

        function ValidateFromDataHs() {

            var isOk = true;
            var obj = {};

            try {
                isOk = ValidateCheck("formHsApplication");
                if (isOk) {

                    obj.hsId = ConvertToInt($("#hfdHsId").val());
                    obj.applicantId = applicantId;
                    obj.typeId = ConvertToInt($("#ddlType").val());
                    obj.detail = ConvertToString($("#txtDetail").val());
                    obj.hsAppId = hsAppId;

                    var imagePath = "/Images/Hardship/" + applicantId + "/";

                    //#region Preference
                    var listTbPreference = [];
                    $('.chk-spj:checked').each(function () {

                        var reffId = ConvertToInt($(this).attr("reffId"));
                        var prefrenceNo = ConvertToInt($("#txtspj" + reffId).val());

                        var objPref = {};
                        objPref.reffId3 = $(this).attr("reffId");


                        var prefrenceNoOld = 0;
                        try {
                            prefrenceNoOld = $.grep(listTbPreference, function (n, i) {
                                return n.reffId4 == prefrenceNo;
                            })[0].reffId4;
                        } catch (e) {
                            prefrenceNoOld = 0;
                        }

                        if (prefrenceNoOld == prefrenceNo) {
                            isOk = false;
                            obj.isOk = isOk;
                            alert("Duplicate preference not allowed");
                            return obj;
                        }
                        objPref.reffId1 = prefrenceNo;
                        objPref.reffId4 = prefrenceNo;
                        var image = "", flCtrl = "fl" + reffId;
                        if ($("#" + flCtrl).val()) {
                            image = UploadImage(flCtrl, applicantId, "nocd_", imagePath);
                            $("#hfd" + reffId).val(image);
                        }
                        objPref.reffIds5 = $("#hfd" + reffId).val();
                        listTbPreference.push(objPref);
                    });

                    if (listTbPreference.length == 0) {

                        if (specialityJobId == 0) {
                            var objPref = {};
                            objPref.reffId1 = 0;
                            listTbPreference.push(objPref);
                        }
                        else {
                            isOk = false;
                            obj.isOk = isOk;

                            alert("Please select minimum one preference.");
                            return obj;
                        }
                    }
                    obj.listTbPreference = listTbPreference;
                    //#endregion

                }

            } catch (e) {
                isOk = false;
            }
            obj.isOk = isOk
            return obj;
        }

        function SaveDataApplicationDocsHs(hsAppId) {

            var obj = ValidateFromDataDocsHs(hsAppId);
            if (obj.isOk == true) {
                var resp = CallActionPost("/HsApplicant/HsApplicationDocsAddUpdate", obj);
                if (resp != null && resp.status == true) {
                    DisableForm();
                    alert("Your hardship application data saved successfully.");
                }
                else {
                    alert("Some thing went worng!");
                }
            }
        }

        function ValidateFromDataDocsHs(hsAppId) {

            var isOk = true;
            var obj = {};

            try {
                ApplyDocsValidation();

                isOk = ValidateCheck("formHsApplication");
                if (isOk) {

                    obj.hsId = ConvertToInt($("#hfdHsId").val());
                    obj.applicantId = applicantId;
                    obj.hsAppId = hsAppId;

                    var imagePath = "/Images/Hardship/" + applicantId + "/";

                    //#region Documents
                    var listTbDocs = [];
                    for (var i = 0; i < listFlu.length; i++) {

                        objItem = listFlu[i];
                        var fuId = "fl" + objItem.fileId;
                        var objfu = {};

                        objfu.reffId1 = (i + 1);

                        objfu.reffId5 = objItem.fileId; // fileId
                        if ($("#" + fuId).val()) {
                            var imgName = ConvertToString($("#" + fuId).attr("code")) + "_";
                            objItem.image = UploadImage(fuId, applicantId, imgName, imagePath);
                            $("#hfd" + + objItem.fileId).val(objItem.image);
                        }
                        objfu.reffIds5 = ConvertToString($("#hfd" + + objItem.fileId).val()); // fileName

                        if (objfu.reffIds5 != "" && objfu.reffIds5 != "0") {
                            objfu.reffId2 = ConvertToInt($("#hfdDocId" + + objItem.fileId).val()); // DocId
                            listTbDocs.push(objfu);
                        }
                    }

                    if (listTbDocs.length == 0) {
                        var objfu = {};
                        objfu.reffId1 = 0;
                        listTbDocs.push(objfu);
                    }

                    obj.listTbDocs = listTbDocs;
                    //#endregion
                }

            } catch (e) {
                isOk = false;
            }
            obj.isOk = isOk
            return obj;
        }

    </script>
}
