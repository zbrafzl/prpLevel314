@{
    ViewBag.Title = "Hardship - Application";
    Layout = "~/Views/Shared/_LayoutHs.cshtml";
}
@model Prp.Sln.HsEmptyModel
@section RenderCss{
    <style>
        .ank:hover {
            cursor: pointer;
        }

        .query-new {
            background-color: #f95454;
            padding: 5px 10px;
            border-radius: 5px;
            color: #fff;
        }

        .query-old {
            background-color: #61aa2f;
            padding: 5px 10px;
            border-radius: 5px;
            color: #fff;
        }

        .spdetail {
            font-size: 12px;
            font-style: italic;
            color: #0a26ed;
            cursor: pointer;
        }

        .spn-join-info {
            width: 47%;
            float: left
        }

        .lblhead {
            float: left;
            clear: both;
            width: 100%;
        }

        .spn-invalid {
            border: 1px solid;
            border-radius: 5px;
            padding: 1px 10px;
            background: #ee4a4a;
            cursor: pointer;
            color: #fff;
        }

            .spn-invalid:hover {
                background: #f06565;
            }

