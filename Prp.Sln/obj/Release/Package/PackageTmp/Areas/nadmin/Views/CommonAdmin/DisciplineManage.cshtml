@{
    ViewBag.Title = "Discipline";
    Layout = "~/Areas/nadmin/Views/Shared/_Layout.cshtml";
}

@model Prp.Sln.DisciplineModelAdmin
@section RenderCss{

}
@section RenderScript{

    <script>
        var typeId = 0;
        $(document).ready(function () {

           
        });
    </script>
}
<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Discipline Manage </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">ID </th>
                            <th class="column-title">Name </th>
                            <th>
                                <span class="nobr">Action</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && (Model.list != null && Model.list.Count > 0))
                        {
                            foreach (var item in Model.list.OrderBy(x => x.name))
                            {
                                <tr>
                                    <td>@item.disciplineId</td>
                                    <td>@item.name</td>
                                    <td>
                                        <a title="Edit Content" class="ank" href="@("/admin/discipline-associate?id="+ item.disciplineId)"><i class="ffa fa-cloud-upload"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>