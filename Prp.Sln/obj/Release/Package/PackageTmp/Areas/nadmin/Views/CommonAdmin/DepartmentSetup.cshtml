
@{
    ViewBag.Title = "Constant Setup";
    Layout = "~/Areas/nadmin/Views/Shared/_Layout.cshtml";
}

@model Prp.Sln.DepartmentModelAdmin
@section RenderCss{

}
@section RenderScript{

    <script>
        $(document).ready(function () {

            $("#hfdRedirectUrl").val("/admin/department-manage");
        });
    </script>
}
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Department Setup </h2>
                <div class="panel_toolbox">
                    <a href="/admin/department-manage" class="btn btn-info"> Manage</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("SaveDepartmentData", "CommonAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                @Html.HiddenFor(m => m.department.departmentId, new { @id = "hfdId" })
                @Html.HiddenFor(m => m.redirectUrl, new { @id = "hfdRedirectUrl"  })
                <div class="form-group col-lg-12">
                    <div class="col-md-5 col-sm-5 col-xs-5">
                        <label for="heard">Code *:</label>
                        @Html.TextBoxFor(a => a.department.code, new { @class = "form-control", @required = "required", @id = "txtCode", @tabindex = "2" })
                    </div>
                    <div class="col-md-5 col-sm-5 col-xs-5">
                        <label for="heard">Name *:</label>
                        @Html.TextBoxFor(a => a.department.name, new { @class = "form-control", @required = "required", @id = "txtName", @tabindex = "3" })
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-2">
                        <label for="heard">Status :</label>
                        @Html.CheckBoxFor(a => a.department.isActive, new { @class = "form-control", @id = "chkActive", @tabindex = "6" })
                    </div>
                </div>
                <div class="form-group col-lg-12" style="display:none;">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <label for="heard">Type :</label>
                        @Html.DropDownListFor(a => a.department.typeId, new SelectList(Model.listType, "id", "name"), "Select One", new { @class = "form-control chosen-select", @id = "ddlType", @tabindex = "5" })
                    </div>

                </div>
                <div class="clearfix"></div>
                <div class="ln_solid"></div>
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
                }
            </div>
        </div>
    </div>
</div>