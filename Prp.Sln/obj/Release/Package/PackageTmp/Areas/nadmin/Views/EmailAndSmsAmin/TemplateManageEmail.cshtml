@{
    ViewBag.Title = "Manage Email Template";
    Layout = "~/Areas/nadmin/Views/Shared/_Layout.cshtml";
}
@model Prp.Sln.EmptyModelAdmin
@section RenderCss{

}
@section RenderScript{

    <script>
        var typeId = 0;
        $(document).ready(function () {

            SearchAndBind();
        });

        function SearchAndBind() {
            $('#tbBody').append("");
            try {

                var obj = {};
                obj.inductionId = inductionId;
                var resp = CallActionPost("/EmailAndSmsAmin/EmailTemplateSearch", obj);
                if (resp != null) {

                    var list = resp.Table;
                    if (list != null && list.length > 0) {
                        var objItem = {}, status = "";
                        var htmlSingle = $('#tbRow').html();
                        for (var i = 0; i < list.length; i++) {
                            objItem = list[i];
                            status = "In-Active";
                            if (objItem.isActive == true)
                                status = "Active";

                            var html = htmlSingle.replace(/{#rowNo#}/g, objItem.rowNo)
                                .replace(/{#tempId#}/g, objItem.tempId)
                                .replace(/{#typeName#}/g, objItem.typeName)
                                .replace(/{#title#}/g, objItem.title)
                                .replace(/{#subject#}/g, objItem.subject).replace(/{#status#}/g, status);

                            $('#tbBody').append(html);
                        }
                    }
                }
            } catch (e) {
                htmlAll = "";
            }
        }
    </script>
}
<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Email Template Manage </h2>
            <div class="panel_toolbox">
                <a href="/admin/email-template-setup" class="btn btn-info"> Add New</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Sr </th>
                            <th class="column-title">Type </th>
                            <th class="column-title">Tite </th>
                            <th class="column-title">Subject </th>
                            <th class="column-title">Status </th>
                            <th>
                                <span class="nobr">Action</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div style="display:none;">
    <table>
        <tbody id="tbRow">
            <tr>
                <td>{#rowNo#}</td>
                <td>{#typeName#}</td>
                <td>{#title#}</td>
                <td>{#subject#}</td>
                <td>{#status#}</td>
                <td>
                    <a title="Edit Content" class="ank" href="/admin/email-template-setup?id={#tempId#}"><i class="fa fa-pencil-square-o"></i></a>
                </td>
            </tr>
        </tbody>
        <tbody id="tbNoRecord">
            <tr>
                <td colspan="7" style="text-align:center;">No record found</td>
            </tr>
        </tbody>
    </table>
</div>