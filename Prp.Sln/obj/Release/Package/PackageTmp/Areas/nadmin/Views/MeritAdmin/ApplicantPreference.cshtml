                                                            <td>@info.pmdcExpiryDate.ToString("dd MMM yyyy")</td>
                                                        </tr>
                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                        <tr>
                                                            @if (info.countryId == 132)
