@{
    ViewBag.Title = "Hardship - Application";
    Layout = "~/Views/Shared/_LayoutHs.cshtml";
}
@model Prp.Sln.HsEmptyModel
@section RenderCss{
    <style>
        .ank:hover {
            cursor: pointer;
        }

        .query-new {
            background-color: #f95454;
            padding: 5px 10px;
            border-radius: 5px;
            color: #fff;
        }

        .query-old {
            background-color: #61aa2f;
            padding: 5px 10px;
            border-radius: 5px;
            color: #fff;
        }

        .spdetail {
            font-size: 12px;
            font-style: italic;
            color: #0a26ed;
            cursor: pointer;
        }

        .spn-join-info {
            width: 47%;
            float: left
        }

        .lblhead {
            float: left;
            clear: both;
            width: 100%;
        }
    </style>

}
@section RenderScript{

    <script>
        var applicantId = 0;
        $(document).ready(function () {

            applicantId = ConvertToInt($("#hfdApplicantId").val());

            GetAndBindJoiningAndHsInfo();
        });

        var objIndcJoin = {}, objJoin = {}, objSpec = {}, listSpec = [], objApp = {}, objAppInfo = {}, objDegree = {};
        function GetAndBindJoiningAndHsInfo() {

            var obj = {};
            obj.spName = "spApplicantDataGetHardship";

            var listParam = [];

            var objParam = {};
            objParam.key = "applicantId";
            objParam.value = applicantId;
            objParam.dataType = "int";
            listParam.push(objParam);

            obj.listParam = listParam;
            var resp = CallActionPost("/Common/CallSpGenericToDataSet", obj);
            if (resp != null) {

                var objHs = resp.Table[0];

                $("#hfdHsId").val(objHs.hsId);

                objApp = resp.Table1[0];
                objAppInfo = resp.Table3[0];
                objDegree = resp.Table5[0];
                BindApplicantInfo();

                objJoin = resp.Table11[0];
                objSpec = resp.Table12[0];
                objIndcJoin = resp.Table13[0];
                BindJoiningInfo(objJoin, objSpec);

                listSpec = resp.Table20;
                var listType = resp.Table6;
                DDLBindList("#ddlType", listType, "Select One", -9, 1);
                $("#ddlType").val(1);
                $("#ddlType").change();


                var objHsApp = resp.Table15[0];
                var objHsAppImg = resp.Table16[0];
                //var objHsAppImg = resp.Table17;
                if (objHsApp.hsAppId > 0) {
                    $("#ddlType").val(objHsApp.typeId);
                    $("#ddlType").change();
                    //$("#ddlSpecilityJob").val(objHsApp.specialityJobId);

                    $("#txtDetail").val(objHsApp.detail);

                    var imagesPath = "/Images/Applicant/" + applicantId + "/";
                    if (objHsAppImg.hsAppId > 0) {

                        $("#hfdImgHs").val(objHsAppImg.image);
                        if (objHsAppImg.image != "") {
                            $('#imgImgHs').attr('src', imagesPath + objHsAppImg.image);
                            $('#imgImgHs').show();
                            $('#rmvImgHs').show();
                        }
                    }
                    DisableForm();
                }
                else {
                    EditFormOpen();
                }

            }
        }

        function BindApplicantInfo() {
            var htmlTemp = $("#spnJoinInfoRow").html();

            var hmtlInfo = "";
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Applicant Id : ").replace(/{#value#}/g, ConvertToString(objApp.applicantId));
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Name : ").replace(/{#value#}/g, objApp.name);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "PMDC No. : ").replace(/{#value#}/g, objApp.pmdcNo);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Contact No. : ").replace(/{#value#}/g, objApp.contactNumber);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "S/D/W Of : ").replace(/{#value#}/g, objAppInfo.fatherName);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "CNIC/Passport : ").replace(/{#value#}/g, objAppInfo.cnicNo);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "Degree : ").replace(/{#value#}/g, objDegree.instituteName);
            hmtlInfo = hmtlInfo + htmlTemp.replace(/{#key#}/g, "District : ").replace(/{#value#}/g, objAppInfo.districtName);
            $("#divApplicantInfo").html(hmtlInfo);
        }

        function BindJoiningInfo(objJoin, obj) {

            var htmlTemp = $("#spnJoinInfoRow").html();

            //
            var hmtlJoinigInfo = "";
            hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Induction : ").replace(/{#value#}/g, objIndcJoin.name);


            if (obj.specialityJobId == 0) {
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Program : ").replace(/{#value#}/g, obj.Program);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Hospital : ").replace(/{#value#}/g, obj.Institute);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Speciality : ").replace(/{#value#}/g, obj.Specialty);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Marks : ").replace(/{#value#}/g, obj.Aggregate);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Joining Date : ").replace(/{#value#}/g, obj.joiningStatus);
            }
            else {
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Program : ").replace(/{#value#}/g, obj.typeName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Quota : ").replace(/{#value#}/g, obj.quotaName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Institute : ").replace(/{#value#}/g, obj.instituteName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Hospital : ").replace(/{#value#}/g, obj.hospitalName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Speciality : ").replace(/{#value#}/g, obj.specialityName);
                hmtlJoinigInfo = hmtlJoinigInfo + htmlTemp.replace(/{#key#}/g, "Marks : ").replace(/{#value#}/g, objJoin.marks);
            }
            $("#divJoiningInfo").html(hmtlJoinigInfo);

        }

        function DDLEventChangeType() {

            var typeId = ConvertToInt($("#ddlType").val());

            var listSpecJob = [];
            if (typeId == 1 && objSpec.specialityJobId == 0) {
                listSpecJob = [];
            }
            else {
                listSpecJob = listSpec;
                //listSpecJob = $.grep(listSpec, function (n, i) {
                //    return n.applicantSpecilityId == applicantSpecilityId;
                //});
            }

            $("#divSpecilityJob").html("");

            var htmlAll = "";
            if (listSpecJob.length > 0) {
                var htmlTemp = $("#specilityJobRow").html();
                for (var i = 0; i < listSpecJob.length; i++) {
                    var objItem = listSpecJob[i];
                    htmlAll = htmlAll + htmlTemp.replace(/#key#/g, objItem.key).replace(/#value#/g, objItem.value).replace(/#checked#/g, objItem.checked);
                }
                $("#divSpecilityJob").html(htmlAll);

                for (var i = 0; i < listSpecJob.length; i++) {
                    var objItem = listSpecJob[i];
                    if (objItem.jobId > 0)
                        $("#chkspj" + objItem.value).prop("checked", true);
               }
            }
            else {
                htmlAll = $("#specilityJobRowNoRecord").html();
                $("#divSpecilityJob").html(htmlAll);
            }
           
        }

        function EditFormOpen() {

            $("#ddlType").prop("disabled", false);
            $(".chk-spj").prop("disabled", false);
            $("#flImgHs").prop("disabled", false);
            $("#txtDetail").prop("disabled", false);
            $("#btnSave").show();
            $("#btnEdit").hide();

        }

        function DisableForm() {

            $("#ddlType").prop("disabled", true);
            $(".chk-spj").prop("disabled", true);
            $("#flImgHs").prop("disabled", true);
            $("#txtDetail").prop("disabled", true);
            $("#btnSave").hide();
            $("#btnEdit").show();
        }

        function SaveDataApplicationHs() {

            var obj = ValidateFromDataHs();
            if (obj.isOk == true) {
                var resp = CallActionPost("/Common/CallSpGenericToMessage", obj);
                if (resp != null && resp.status == true) {
                    DisableForm();
                    alert(resp.msg);
                }
                else {
                    alert("Some thing went worng!");
                }
            }
            else {
                alert("Some thing went worng!!");
            }
        }

        function ValidateFromDataHs() {

            var isOk = true;
            var obj = {};

            try {

                obj.spName = "spHsApplicationAddUpdate";

                var listParam = [];

                var objParam = {};
                objParam.key = "hsId";
                objParam.value = ConvertToInt($("#hfdHsId").val());
                objParam.dataType = "int";
                listParam.push(objParam);

                var objParam = {};
                objParam.key = "applicantId";
                objParam.value = applicantId;
                objParam.dataType = "int";
                listParam.push(objParam);

                var objParam = {};
                objParam.key = "typeId";
                objParam.value = ConvertToInt($("#ddlType").val());
                objParam.dataType = "int";
                listParam.push(objParam);

                //var objParam = {};
                //objParam.key = "specialityJobId";
                //objParam.value = ConvertToInt($("#ddlSpecilityJob").val());
                //objParam.dataType = "int";
                //listParam.push(objParam);

                var image = "";
                if ($("#flImgHs").val()) {
                    image = UploadImage("flImgHs", applicantId, "Hardship");
                    $("#hfdImgHs").val(image);
                }

                var objParam = {};
                objParam.key = "image";
                objParam.value = ConvertToString($("#hfdImgHs").val());
                objParam.dataType = "string";
                listParam.push(objParam);

                var objParam = {};
                objParam.key = "detail";
                objParam.value = ConvertToString($("#txtDetail").val());
                objParam.dataType = "string";
                listParam.push(objParam);

                var jobIds = "";
                $('.chk-spj:checked').each(function () {
                    jobIds = jobIds + $(this).attr("reffId") + ",";
                });

                var objParam = {};
                objParam.key = "specialityJobIds";
                objParam.value = jobIds;
                objParam.dataType = "string";
                listParam.push(objParam);


                obj.listParam = listParam;
            } catch (e) {
                isOk = false;
            }
            obj.isOk = isOk

            return obj;
        }

    </script>
}
<div class="container content">
    <div class="row main">
        <div class="col-sm-12 form-box">
            <div class="main-login main-center">
                <h3 class="heading">Hardship Application</h3>
                <hr class="colorgraph">

                <fieldset>
                    <legend>
                        <label class="checkbox-inline" for="chkConfirm">
                            Applicant Info
                        </label>
                    </legend>
                    <div class="row col-md-12 " id="divApplicantInfo">
                    </div>
                </fieldset>

                <fieldset>
                    <legend>
                        <label class="checkbox-inline" for="chkConfirm">
                            Joining Info
                        </label>
                    </legend>
                    <div class="row col-md-12 " id="divJoiningInfo">
                    </div>
                </fieldset>

                <fieldset>
                    <legend>
                        <label class="checkbox-inline" for="chkConfirm">
                            Application
                        </label>
                    </legend>
                    <div class="row col-md-12">
                        <form class="form-horizontal">
                            <input type="hidden" id="hfdHsId" />
                            <div class=" col-md-12">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <label> Type <span class="sprq">*</span></label>
                                        <select class="form-control ddl-event" required="" name="ddlType" id="ddlType" fn="DDLEventChangeType">
                                        </select>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <label class="lblhead">  Document </label>
                                        <input type="file" id="flImgHs" class="form-control flup" tabindex="2">
                                        <input type="hidden" id="hfdImgHs" value="" />
                                        <img id="imgImgHs" class="flup-img" src="" alt="" style="display:none;" />
                                        <a id="rmvImgHs" class="removeImage" style="display:none;"> <i class="fa fa-window-close"></i> Remove</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <fieldset>
                                        <legend>
                                            <label class="checkbox-inline" for="chkConfirm">
                                                Where can apply
                                            </label>
                                        </legend>
                                        <div class="col-xs-12 col-sm-12 col-md-12">
                                            <div id="divSpecilityJob">
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <label> Application <span class="sprq">*</span></label>
                                        <textarea id="txtDetail" class="form-control" rows="10"> </textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12" style="margin:10px 0px 20px 0px;">
                                        <div class="col-sm-4">
                                        </div>
                                        <div class="col-sm-4">
                                            <input type="button" id="btnSave" class="btn btn-app animated-button" style="width: 100%; display:none;" value="Submit" onclick="SaveDataApplicationHs();" />
                                            <input type="button" id="btnEdit" class="btn btn-app animated-button" style="width:100%; display:none;" value="Edit/Open Form" onclick="EditFormOpen();" />
                                        </div>
                                        <div class="col-sm-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>

<div style="display:none">
    <div id="spnJoinInfoRow">
        <span class="spn-join-info"> <b>{#key#}</b>{#value#}</span>
    </div>

    <div id="specilityJobRow">
        <label id="spj#value#">
            <input type="checkbox" id="chkspj#value#" class="chk-spj" reffId="#value#"/>
            <span> #key# </span>
        </label>


    </div>
    <div id="specilityJobRowNoRecord">
        <label>
            <span> No option avaiable against your specility and aggregate </span>
        </label>
    </div>
</div>