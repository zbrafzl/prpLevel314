    <script>

        $(document).ready(function () {

            statusId = ConvertToInt($("#hfdStatusId").val());
            inductionId = ConvertToInt($("#hfdInductionId").val());
            $("#ddlStatus").val(statusId);

            SearchApplicantConsents();
            SearchApplicantMerits();

        });

        $(document).on('click', '#btnSave', function () {
            SaveApplicantConsent();
        });

        function SaveApplicantConsent() {

            if (ValidateFormConsent() == false) {
                var resp = CallActionPost("/ConsentUI/ConsentSave", obj);
                if (resp != null && resp.status == true) {
                    alert("Data saved successfully")
                    window.location.reload;
                }
                else {
                    if (resp.msg != null) {
                        alert(resp.msg);
                    }
                    else {
                        alert(resp.msg.msg);
                    }
                }
            }
            else {
                alert("Wrong");
            }
        }

        function ValidateFormConsent() {

            var isError = false, ctrl = "";

            obj = {};

            var consents = [];

            var totalConsents = 0;

            var programFCPS = document.getElementsByName("1");
            if (programFCPS != null && programFCPS.length > 0) {
                var consent = {};
                consent.typeId = 1;
                for (i = 0; i < programFCPS.length; i++) {
                    if (programFCPS[i].checked)
                        consent.consentTypeId = programFCPS[i].id;
                    if (consent.consentTypeId == 1)
                        totalConsents = totalConsents + 1;
                }
                consents.push(consent);
            }
            var programMS = document.getElementsByName("2");
            if (programMS != null && programMS.length > 0) {
                var consent = {};
                consent.typeId = 2;
                for (i = 0; i < programMS.length; i++) {
                    if (programMS[i].checked)
                        consent.consentTypeId = programMS[i].id;
                    if (consent.consentTypeId == 1)
                        totalConsents = totalConsents + 1;
                }
                consents.push(consent);
            }

            var programMD = document.getElementsByName("3");
            if (programMD != null && programMD.length > 0) {
                var consent = {};
                consent.typeId = 3;
                for (i = 0; i < programMD.length; i++) {
                    if (programMD[i].checked)
                        consent.consentTypeId = programMD[i].id;
                    if (consent.consentTypeId == 1)
                        totalConsents = totalConsents + 1;
                }
                consents.push(consent);
            }

            var programMDS = document.getElementsByName("4");
            if (programMDS != null && programMDS.length > 0) {
                var consent = {};
                consent.typeId = 4;
                for (i = 0; i < programMDS.length; i++) {
                    if (programMDS[i].checked)
                        consent.consentTypeId = programMDS[i].id;
                    if (consent.consentTypeId == 1)
                        totalConsents = totalConsents + 1;
                }
                consents.push(consent);
            }

            var programFCPSD = document.getElementsByName("5");
            if (programFCPSD != null && programFCPSD.length > 0) {
                var consent = {};
                consent.typeId = 5;
                for (i = 0; i < programFCPSD.length; i++) {
                    if (programFCPSD[i].checked)
                        consent.consentTypeId = programFCPSD[i].id;
                    if (consent.consentTypeId == 1)
                        totalConsents = totalConsents + 1;
                }
                consents.push(consent);
            }

            if (totalConsents > 1) {
                isError = true;
                alert("You can only give consent in one of the programs");
            }
            else {
                isError = false;
            }
            
            obj.consentsFinal = consents;
            console.log(obj);

            //ddlDoxTaken
            return isError;
        }

        function SetValueAndValidateForm(event) {

            var isOk = true;

            if (isOk == false)
                event.preventDefault();
        }

        function SearchApplicantConsents() {

            var rowHtml = "";
            obj = {};

            var url = "/ConsentUI/ApplicantContents";

            var list = CallActionPost(url);

            
        }

        function SearchApplicantMerits() {

            var rowHtml = "";
            obj = {};

            var url = "/ConsentUI/ApplicantMerits";

            var list = CallActionPost(url);

            var html = "";

            //console.log(list);

            rowHtml = $("#tbTempHtml").html();

            if (list != null && list.length > 0) {
                for (var i = 0; i < list.length; i++) {

                    objItem = list[i];
                    singleHtml = rowHtml;

                    //var _date = new Date(objItem.dated);
                    //dated = ToDateFormatDDMMYYY(_date);

                    html = html + singleHtml.replace(/{#rowNum#}/g, objItem.id)
                        .replace(/{#programSpecialtyHospital#}/g, objItem.value);
                }
                $("#tblPanel").show();
                $("#tbPanel").html(html);
            }
            else {
                $("#tblPanel").hide();
                $("#tbPanel").html("");
            }

            
        }

    </script>

}
